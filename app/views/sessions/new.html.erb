<div class="login">
  <h1>Login</h1>
  <br>
  <div class ="login-form well new-form">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email_address %>
    <%= f.text_field :email_address %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Login" %>
    <% end %>
    <br>
    <%= link_to "Create New Account", new_user_path %>
  </div>
</div>
